{
	"name": "indirect-costs-system",
	"version": "1.0.0",
	"description": "Sistema completo de gestiÃ³n de costos indirectos con backend GraphQL y frontend React",
	"license": "MIT",
	"private": true,
	"workspaces": [
		"backend",
		"frontend"
	],
	"scripts": {
		"dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
		"dev:backend": "cd backend && npm run dev",
		"dev:frontend": "cd frontend && npm run dev:full",
		"build": "npm run build:backend && npm run build:frontend",
		"build:backend": "cd backend && npm run build",
		"build:frontend": "cd frontend && npm run build",
		"start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
		"start:backend": "cd backend && npm start",
		"start:frontend": "cd frontend && npm run preview",
		"install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
		"clean": "rm -rf node_modules && cd backend && rm -rf node_modules && cd ../frontend && rm -rf node_modules",
		"reset:db": "cd backend && npm run db:reset",
		"seed": "cd backend && npm run seed",
		"studio": "cd backend && npm run db:studio",
		"codegen": "cd frontend && npm run codegen",
		"lint": "cd frontend && npm run lint",
		"test": "echo \"Tests not implemented yet\" && exit 0"
	},
	"devDependencies": {
		"concurrently": "^8.2.2"
	},
	"engines": {
		"node": ">=18.0.0",
		"npm": ">=8.0.0"
	},
	"keywords": [
		"graphql",
		"react",
		"typescript",
		"prisma",
		"apollo",
		"vite",
		"tailwind",
		"shadcn-ui",
		"cost-management",
		"manufacturing"
	]
}
